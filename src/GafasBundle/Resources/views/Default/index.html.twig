{% extends "base.html.twig" %}

{% block title %}Gafas{% endblock %}
{%block style%}
 <style type="text/css">
       .box{
            display: flex;
            box-sizing: border-box;
            flex-direction: row;
            background-color: black;
        }
        .header{
            background-color: aqua;
            height: 15vh;
        }
        .menu{
            background-color: yellowgreen;
            width: 20%;
            }
        .main{
            background-color: tomato;
            width: 80%;
            flex: 1;
        }
        .main-body{
            display: flex;
            flex-flow: row wrap;
        }
        .card{
            margin: 0.5em;
            background-color:blueviolet;
            width: 35vh;
            height: 13em;
        }
        

	footer{
	    background-color: aqua;
	    
		}
    </style>
{%endblock%}
{%block  header%}
    <div class="header"> Esto es el header de las gafas</div>
{%endblock%}
{% block body %}
               <div class="box">
            <div class="menu">Menu</div>
            <div class="main">
                <div class="main-head"><h1>Catalogo de Gafas</h1></div>
                <div class="main-body">
                    {% for gafa in gafas %}
                    <div class="card">
                        <div class="card-header">
                            {{ gafa.model }}
                        </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <p>{{ gafa.category}} </p>
                        <p>{{ gafa.price}}â‚¬</p>
                    </blockquote>
                    </div>
                </div>
                {% endfor %}
                </div>
            </div>
        </div>
{% endblock %}
{%block footer%}
    <footer>Esto es el footer</footer>      
{%endblock%}