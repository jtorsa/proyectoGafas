{% extends "base.html.twig" %}

{% block title %}Gafas{% endblock %}
{% block style %}
 <style type="text/css">
       
        #shape {
  -webkit-clip-path: polygon(0 55%, 100% 0%, 100% 100%, 0% 100%);
  clip-path: polygon(0 55%, 100% 0%, 100% 100%, 0% 100%);
  width:200px;
  height:200px;
  background-color:black;
}
    </style>
{%endblock%}
{%block  header%}
    <div class="header"> Esto es el header de las gafas</div>
{%endblock%}
{% block body %}
               <div class="box">
            <div class="menu">
                <div class="menu-head">
                     Esto es el menú
                </div>
                <div class="menu-body">
                {% for categoria in categorias %}
                     <div class="menu-cat">
                     <a href="/categoria/{{categoria.id}}">
                        GAFAS GEEK {{categoria.name}}</a>
                    </div>
                 {%endfor%}
                </div>
                
            </div> 
            <div class="main">
                <div class="main-head">
                {% if gafas %}
                    <h1>Categoria: {{gafas[0].categoria}}</h1>
                {% endif %}
                </div>
                <div class="banner1">
                <div class="row banner">
                </div>
            </div>
                 <div class="promo">
                        <div class="ofertas">
                            ofertas
                        </div>
                        <div class="ofertas">
                            novedades
                        </div>
                        <div class="ofertas">
                            promociones
                        </div>
                </div>
                <div class="main-body">
                  
                    {% for gafa in gafas %}
                    <div class="card">
                        <div class="card-header">
                            {{ gafa.model }}
                        </div>
                    <div class="card-body">
                        <blockquote class="blockquote mb-0">
                        <div class="imagen">
                        <a href="/detail/{{gafa.id}}">
                            <img src="../../img/{{gafa.image}}" ></a>
                        </div>
                        <p>{{ gafa.price}}€</p>
                         <p>{{ gafa.categoria}}</p>
                    </blockquote>
                    </div>
                </div>
                {% endfor %}
                </div>
            </div>
        </div> 
{% endblock %}
{%block footer%}
    <footer>Esto es el footer</footer>      
{%endblock%}